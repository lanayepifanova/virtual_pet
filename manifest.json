{
  "manifest_version": 3,
  "name": "Virtual Pet",
  "version": "1.0",
  "description": "A virtual pet extension.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "web_accessible_resources": [{
    "resources": ["images/*.png"],
    "matches": ["<all_urls>"]
  }]
}
